<phpdox xmlns="http://phpdox.de/config">
  <project name="cakephp" source="app" workdir="build/phpdox">
    <collector publiconly="false">
      <include mask="*.php" />
      <exclude mask="*Autoload.php" />
      <exclude mask="app/Plugin/**" />
      <exclude mask="app/Vendor/**" />
      <exclude mask="lib/**" />
    </collector>

    <generator output="build">
      <build engine="html" enabled="true" output="api"/>
    </generator>
  </project>
</phpdox>
